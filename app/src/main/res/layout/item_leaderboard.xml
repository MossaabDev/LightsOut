<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="center_vertical">

    <!-- Driver Position and Image -->
    <TextView
        android:id="@+id/position"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="#000000"
        android:textSize="16sp"/>

    <ImageView
        android:id="@+id/driver_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/driver1"
        android:contentDescription="Driver Image"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>

    <!-- Driver Name and Team -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/driver_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LEC"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/driver_team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ferrari"
            android:textColor="#888888"
            android:textSize="14sp"/>
    </LinearLayout>

    <!-- Driver Race Time and Points -->
    <TextView
        android:id="@+id/race_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1:43:21.384"
        android:textColor="#000000"
        android:layout_marginEnd="8dp"/>

</LinearLayout>
