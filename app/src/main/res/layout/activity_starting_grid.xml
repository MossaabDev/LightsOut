<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/drawerLayout"

    tools:context=".StartingGridActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolBar"
            android:layout_alignParentTop="true"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:id="@+id/lightsContainer"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/lights_table">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:id="@+id/lightsTable"
                android:weightSum="2"

                >
                <TableRow
                    android:layout_weight="1"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/gray"
                        android:id="@+id/light1"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/gray"
                        android:id="@+id/light2"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/gray"
                        android:id="@+id/light3"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/gray"
                        android:id="@+id/light4"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        />

                </TableRow>
                <TableRow
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/lights"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/gray"
                        android:id="@+id/light12"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/gray"
                        android:id="@+id/light22"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/gray"
                        android:id="@+id/light32"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/gray"
                        android:id="@+id/light42"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        />

                </TableRow>


            </TableLayout>
        </RelativeLayout>
        <ImageButton
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/clutchButton"
            android:layout_below="@+id/lightsContainer"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:scaleType="fitCenter"
            android:src="@drawable/energy"
            android:padding="20dp"
            android:background="@drawable/black_circle"/>
        <ProgressBar
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:rotation="-90"
            style="?android:attr/progressBarStyleHorizontal"
            android:progress="0"
            android:id="@+id/progressBar"
            android:layout_below="@+id/lightsContainer"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:progressDrawable="@drawable/progress_custom"
            android:indeterminate="false"
            android:background="@drawable/black_circle"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/instructionText"
            android:textColor="@color/black"
            android:text="Hold The Clutch"
            android:textSize="30sp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="120dp"
            android:fontFamily="@font/f1i"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timer"
            android:textSize="30sp"
            android:text="00:00:000"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="120dp"
            android:fontFamily="@font/f1i"
            android:visibility="gone"
            />

    </RelativeLayout>
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/navigationView"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu"/>
    
</androidx.drawerlayout.widget.DrawerLayout>
